<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tech.khana.reflekt.preview.ReflektPreview
        android:id="@+id/reflektCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shootButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_camera_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/switchButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/ic_switch_camera_24dp"
        app:layout_constraintBottom_toTopOf="@id/shootButton"
        app:layout_constraintLeft_toLeftOf="@id/shootButton"
        app:layout_constraintRight_toRightOf="@id/shootButton" />

    <ImageView
        android:id="@+id/recordButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        app:layout_constraintLeft_toLeftOf="@id/shootButton"
        app:layout_constraintRight_toRightOf="@id/shootButton"
        app:layout_constraintTop_toBottomOf="@id/shootButton" />

</android.support.constraint.ConstraintLayout>